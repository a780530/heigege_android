<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.tianfu.cutton.activity.login.LoginActivity">

    <include layout="@layout/common_head_back" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_loginPhone"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="74px"
        android:background="@drawable/edittext_background_normal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="26px"
            android:drawableLeft="@mipmap/ic_login_phone"
            android:drawablePadding="12px"
            android:text="账号"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />

        <View
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:background="#ededed" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="400px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_errorUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:textColor="@color/tab_tv_selected"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_loginPsw"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="18px"
        android:background="@drawable/edittext_background_normal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="26px"
            android:drawableLeft="@mipmap/ic_login_pwd"
            android:drawablePadding="12px"
            android:text="密码"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />

        <View
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:background="#ededed" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="400px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:background="@null"
            android:hint="请输入6-16位数密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_errorPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:textColor="@color/tab_tv_selected"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/bt_login"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="48px"
        android:background="@drawable/login__button_background_normal"
        android:enabled="false"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="28px" />

    <Button
        android:id="@+id/bt_phoneLogin"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@drawable/edittext_background_greenl"
        android:text="手机验证登录"
        android:textColor="@color/red_translucent"
        android:textSize="28px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tianfu.cutton.widget.UnderlineTextView
            android:id="@+id/tv_goRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50px"
            android:layout_marginTop="22px"
            android:text="快速注册"
            android:textColor="@color/red_translucent"
            android:textSize="24px"
            app:underline_color="@color/red_translucent"
            />

        <com.tianfu.cutton.widget.UnderlineTextView
            android:id="@+id/tv_forgetPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48px"
            android:layout_marginTop="22px"
            android:text="忘记密码"
            android:textColor="@color/red_translucent"
            android:textSize="24px"
            app:underline_color="@color/red_translucent"
             />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_login_Wx"
        android:layout_width="624px"
        android:layout_height="wrap_content"
        android:layout_marginTop="230px"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="158px"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#b9b9b9" />

        <TextView
            android:gravity="center"
            android:textSize="24px"
            android:layout_width="308px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:text="你还可以通过以下方式登录"
            android:textColor="#999999" />

        <View
            android:layout_width="158px"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:background="#b9b9b9" />
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/loginWx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56px"
        android:src="@mipmap/ic_wechat" />

    <TextView
        android:id="@+id/tv_Weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px"
        android:gravity="center"
        android:text="微信登录"
        android:textColor="@color/drop_color"
        android:textSize="24px" />
</com.zhy.autolayout.AutoLinearLayout>
