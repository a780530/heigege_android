<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="60px"
    android:background="@color/tab_tv_selected"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginBottom="10px"
        android:gravity="center_vertical"
        android:layout_marginLeft="16px"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="620px"
            android:id="@+id/ll_search"
            android:gravity="center_vertical"
            android:layout_height="66px"
            android:background="@drawable/editbox_background_normal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.36px"
                android:src="@mipmap/ic_home_search" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginLeft="9.46px"
                android:background="@null"
                android:hint="输入批号/捆号/仓库名称/加工厂"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:src="@mipmap/ic_mine_message" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>