<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50px"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/sl_haveData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="94px"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_kun_batch"
                                android:layout_width="wrap_content"
                                android:layout_height="44px"
                                android:layout_marginLeft="18px"
                                android:text="65092161019(180/1)"
                                android:textColor="#000"
                                android:textSize="32px" />

                            <Button
                                android:id="@+id/bt_kun_key"
                                android:layout_width="104px"
                                android:layout_height="40px"
                                android:layout_marginLeft="16px"
                                android:background="@drawable/button_style"
                                android:text="1329A"
                                android:textColor="@color/red_translucent"
                                android:textSize="24px" />

                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#f2f2f2" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ll_background_normal"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="360px"
                            android:layout_height="80px"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="142px"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="24px"
                                android:text="产地"
                                android:textColor="@color/detailsColor"
                                android:textSize="28px" />

                            <TextView
                                android:id="@+id/tv_kun_origin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="24px"
                                android:text="--"
                                android:textColor="#333333"
                                android:textSize="28px" />
                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="360px"
                            android:layout_height="80px"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="142px"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="主体颜色级"
                                android:textColor="@color/detailsColor"
                                android:textSize="28px" />

                            <TextView
                                android:id="@+id/tv_kun_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="24px"
                                android:text="--"
                                android:textColor="#333333"
                                android:textSize="28px" />
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="84px"
                    android:gravity="center"
                    android:layout_marginTop="20px"
                    android:background="@mipmap/ic_common_price">

                    <TextView
                        android:layout_marginBottom="5px"
                        android:id="@+id/tv_store_kun_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38px"
                        android:text="19452"
                        android:textColor="@color/white"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/tv_kun_commany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_store_kun_money"
                        android:layout_marginLeft="4px"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="6px"
                        android:layout_toRightOf="@+id/tv_store_kun_money"
                        android:text="元/吨"
                        android:textColor="@color/white"
                        android:textSize="14px" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoFrameLayout>

            <com.zhy.autolayout.AutoLinearLayout
