                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="总公重"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_stdweight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="马克隆档次"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_horse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="长度"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="长度整齐率"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_uniformityIndexAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="回潮率"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_moisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="含杂率"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_trash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="强力"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_breakLoadAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Rd"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_rdAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="+b"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_plusBAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="360px"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="142px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="棉花年度"
                        android:textColor="@color/detailsColor"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kun_createYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24px"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="28px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d1d1d1" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="公检仓库"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_kun_checkStorage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="所在仓库"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_kun_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="距离"
                    android:textColor="@color/red_translucent"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_kun_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="@color/red_translucent"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="联系人"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_kun_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="联系电话"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_kun_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d1d1d1" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="公检日期"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_gongjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="142px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="发布日期"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_kun_releaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#f4f4f4"></View>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_nodata_commodity" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:text="这个商品已下架"
            android:textColor="#999999"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
