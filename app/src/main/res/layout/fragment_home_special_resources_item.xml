<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/editbox_background_normal_sort"
    android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red_translucent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/re_batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="65092161019(180/1)"
                android:textColor="@color/drop_color"
                android:textSize="16dp" />

            <Button
                android:id="@+id/re_key"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:layout_marginLeft="11.5dp"
                android:background="@drawable/button_style"
                android:text="1329A"
                android:textColor="@color/red_translucent"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginRight="28px"
        android:src="@mipmap/ic_home_resour"
        android:layout_gravity="right"
        android:layout_width="26dp"
        android:layout_height="26dp" />
</FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/re_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16450"
            android:textColor="@color/tab_tv_selected"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/吨"
            android:textColor="@color/drop_color"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/ic_common_length" />.

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="长度"
                android:textColor="@color/drop_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/re_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="30"
                android:textColor="@color/drop_color"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/ic_common_elasticity" />.

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="强力"
                android:textColor="@color/drop_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/re_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="30"
                android:textColor="@color/drop_color"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/ic_common_horse" />.

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="马值"
                android:textColor="@color/drop_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/re_micr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="30"
                android:textColor="@color/drop_color"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/ic_common_factory" />

        <TextView
            android:id="@+id/re_storg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="13dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="库尔勒储运经销站库尔勒储勒储站库尔勒储勒储站站...库尔勒储运经销站库尔勒储勒储站库尔勒储勒储站站..."
            android:textColor="@color/drop_color"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>