<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tianfu.cutton.activity.mine.StsCountActivity">

    <include layout="@layout/common_head_back" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:text="批号"
            android:textColor="@color/drop_color"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入11位批次号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/drop_color"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="22px"
        android:background="#eeeeee" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_marginTop="23px"
            android:text="基准单价"
            android:textColor="@color/drop_color"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="23px"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入单价(选填)"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="@color/drop_color"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="22px"
        android:background="#eeeeee" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_marginTop="23px"
            android:text="现货报价"
            android:textColor="@color/drop_color"
            android:textSize="28px" />

        <EditText
            android:id="@+id/et_quotedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="23px"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入报价(选填)"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="@color/drop_color"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="22px"
        android:background="#eeeeee" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            android:layout_marginTop="23px"
            android:text="结算类型"
            android:textColor="@color/drop_color"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="23px"
            android:drawablePadding="8px"
            android:drawableRight="@mipmap/ic_common_downblack"
            android:gravity="right"
            android:text="公重"
            android:textColor="@color/drop_color"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="22px"
        android:background="#eeeeee" />

    <Button
        android:id="@+id/bt_countSts"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="640px"
        android:layout_height="88px"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:background="@mipmap/ic_mine_stsbackblack"
        android:text="计算"
        android:textColor="@color/white"
        android:textSize="32px" />
</com.zhy.autolayout.AutoLinearLayout>
