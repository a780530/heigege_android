<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_head_back" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_forgetPhone"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="74px"
        android:background="@drawable/edittext_background_normal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:drawablePadding="12px"
            android:drawableLeft="@mipmap/ic_login_phone"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="26px"
            android:text="手机号码"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />

        <View
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="#ededed" />

        <EditText
            android:id="@+id/et_forgetPhone"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />

        <View
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_marginLeft="26px"
            android:background="#ededed" />

        <TextView
            android:id="@+id/tv_getCode"
            android:layout_width="120px"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_marginTop="28px"
            android:text="获取验证码"
            android:textColor="@color/red_translucent"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_errorUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:textColor="@color/homeTextLongColor"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_forgetSms"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="18px"
        android:background="@drawable/edittext_background_normal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:drawableLeft="@mipmap/ic_login_sms"
            android:drawablePadding="12px"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="26px"
            android:text="验证码"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />

        <View
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="#ededed" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_code"
            android:layout_width="400px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginLeft="18px"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="20"
            android:textColor="@color/red_translucent"
            android:textSize="28px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_errorSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:textColor="@color/homeTextLongColor"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/bt_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="624px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="48px"
        android:background="@drawable/login__button_background_normal"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="28px" />

    <com.tianfu.cutton.widget.UnderlineTextView
        android:id="@+id/call_kefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:text="遇到问题？您可以联系客服"
        android:textColor="#999999"
        android:textSize="24px" />
</com.zhy.autolayout.AutoLinearLayout>
