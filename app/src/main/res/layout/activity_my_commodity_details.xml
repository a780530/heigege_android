<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_tv_selected"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146px"
        android:background="@color/tab_tv_selected"
        android:orientation="horizontal"
        android:paddingTop="50px">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="24px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="30px"
            android:src="@mipmap/ic_common_back" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tlMain"
            app:tabGravity="center"
            app:tabPaddingBottom="-20dp"
            app:tabPaddingEnd="-20dp"
            app:tabPaddingStart="-20dp"
            app:tabPaddingTop="-20dp"
            app:tabMode="scrollable"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/white" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:paddingBottom="24px"
            android:paddingLeft="24px"
            android:paddingRight="12px"
            android:paddingTop="30px"
            android:src="@mipmap/ic_common_share" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" />

    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="match_parent"
        android:layout_height="102px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ll_ButtonDetails"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="修改批次"
            android:background="@mipmap/ic_mine_long"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>