<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146px"
        android:background="@color/tab_tv_selected"
        android:orientation="horizontal"
        android:paddingTop="50px">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="24px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="30px"
            android:src="@mipmap/ic_common_back" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tlMain"
            app:tabGravity="center"
            app:tabPaddingBottom="-20dp"
            app:tabPaddingEnd="-20dp"
            app:tabPaddingStart="-20dp"
            app:tabPaddingTop="-20dp"
            app:tabMode="scrollable"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/white" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:paddingBottom="24px"
            android:paddingLeft="24px"
            android:paddingRight="12px"
            android:paddingTop="30px"
            android:src="@mipmap/ic_common_share" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_nodata"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/go_home"
            android:layout_width="136px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44px"
                android:layout_marginTop="22px"
                android:src="@mipmap/ic_common_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44px"
                android:layout_marginTop="6px"
                android:text="首页"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f4f4f4" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_batch_collection"
            android:layout_width="136px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_store_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43px"
                android:layout_marginTop="22px"
                android:src="@mipmap/ic_common_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43px"
                android:layout_marginTop="8px"
                android:text="收藏"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f4f4f4" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/call_phone"
            android:layout_width="136px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49px"
                android:layout_marginTop="22px"
                android:src="@mipmap/ic_common_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37px"
                android:layout_marginTop="2px"
                android:text="报价人"
                android:textSize="20px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_kefu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_back_supply"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76px"
                android:layout_marginTop="32px"
                android:src="@mipmap/ic_common_kefu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14px"
                android:layout_marginTop="36px"
                android:text="联系客服"
                android:textColor="@color/white"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>