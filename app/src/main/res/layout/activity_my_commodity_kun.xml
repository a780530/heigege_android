<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_tv_selected"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146px"
        android:background="@color/tab_tv_selected"
        android:paddingTop="50px">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="30px"
            android:src="@mipmap/ic_common_back" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tlMain"
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="200px"
            android:layout_toRightOf="@+id/iv_back"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/white" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="206px"
            android:padding="24px"
            android:paddingTop="30px"
            android:src="@mipmap/ic_common_share" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_buttoncommodity"
        android:layout_width="match_parent"
        android:layout_height="102px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/bt_chushou"
            android:layout_width="216px"
            android:layout_height="62px"
            android:layout_marginLeft="18px"
            android:background="@mipmap/ic_commodity_list"
            android:text="已出售"
            android:textColor="@color/drop_color" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/bt_xiaohao"
            android:layout_width="216px"
            android:layout_height="62px"
            android:layout_marginLeft="20px"
            android:background="@mipmap/ic_commodity_list"
            android:text="消耗"
            android:textColor="@color/drop_color" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/bt_shangjia"
            android:layout_width="216px"
            android:layout_height="62px"
            android:layout_marginLeft="20px"
            android:background="@mipmap/ic_commodity_list"
            android:text="上架"
            android:textColor="@color/drop_color" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>