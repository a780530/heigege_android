<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f4f4f4"></com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/red_translucent" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="68.5px"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_store_code"
                        android:layout_width="wrap_content"
                        android:layout_height="44px"
                        android:layout_marginLeft="18px"
                        android:text="65092161019(180/1)"
                        android:textColor="#000"
                        android:textSize="32px" />

                    <Button
                        android:id="@+id/bt_store_key"
                        android:layout_width="104px"
                        android:layout_height="40px"
                        android:layout_marginLeft="16px"
                        android:background="@drawable/button_style"
                        android:text="1329A"
                        android:textColor="@color/red_translucent"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f2f2f2" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="240px"
                    android:layout_height="100px"
                    android:background="@drawable/ll_background_normal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_common_length"
                        android:drawablePadding="4px"
                        android:text="长度"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_store_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_length"
                        android:layout_marginTop="2px"
                        android:text="29.7"
                        android:textColor="@color/homeTextLongColor"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="240px"
                    android:layout_height="100px"
                    android:background="@drawable/ll_background_normal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_common_elasticity"
                        android:drawablePadding="4px"
                        android:text="强力"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_store_strong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:text="27.8"
                        android:textColor="#333333"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="240px"
                    android:layout_height="100px"
                    android:background="@drawable/ll_background_normal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_common_horse"
                        android:drawablePadding="4px"
                        android:text="马值"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_store_horse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:text="5"
                        android:textColor="#333333"
                        android:textSize="30px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/ivIsCheap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="214px"
            android:src="@mipmap/ic_home_resour" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/all"
            android:layout_width="200px"
            android:layout_height="82px"
            android:layout_gravity="right"
            android:background="@mipmap/ic_common_price"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_store_money"
                android:layout_width="145px"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:layout_marginRight="4px"
                android:gravity="right"
                android:text="15000"
                android:textColor="@color/white"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_store_commany"
                android:layout_width="40px"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:layout_toRightOf="@+id/tv_store_money"
                android:text="元/吨"
                android:textColor="@color/white"
                android:textSize="14px" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_background_normal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="19.5px"
            android:src="@mipmap/ic_common_factory" />

        <TextView
            android:id="@+id/tv_store_fatory"
            android:layout_width="634px"
            android:layout_height="34px"
            android:layout_marginBottom="14.5px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="16px"
            android:layout_marginTop="14.5px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我的的的的的的的的的的的的的的d ddddddddddddddddddd"
            android:textColor="#333333"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="55px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_store_type"
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_common_cuttonblack"
            android:drawablePadding="8px"
            android:paddingLeft="20px"
            android:text="锯齿细绒棉"
            android:textColor="#333333"
            android:textSize="26px" />


        <TextView
            android:id="@+id/tv_store_range"
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_store_sts"
            android:drawablePadding="8px"
            android:paddingLeft="20px"
            android:text="3320KM"
            android:textColor="#333333"
            android:textSize="26px" />


        <TextView
            android:id="@+id/tv_store_date"
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_commom_date"
            android:drawablePadding="8px"
            android:paddingLeft="20px"
            android:text="2017-5-26"
            android:textColor="#333333"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>